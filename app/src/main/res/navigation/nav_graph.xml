<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postsListFragment">

    <fragment
        android:id="@+id/postsListFragment"
        android:name="com.example.SecondHandGame.PostsListFragment"
        android:label="posts List"
        tools:layout="@layout/fragment_posts_list">
        <action
            android:id="@+id/action_postsListFragment_to_blueFragment"
            app:destination="@id/blueFragment" />
        <action
            android:id="@+id/action_postsListFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/blueFragment"
        android:name="com.example.SecondHandGame.BlueFragment"
        android:label="fragment_blue"
        tools:layout="@layout/fragment_blue" >
        <argument
            android:name="blueTitle"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.SecondHandGame.AddPostFragment"
        android:label="Add Post"
        tools:layout="@layout/fragment_add_post" />
    <action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.SecondHandGame.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about"
        />

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.SecondHandGame.PostFragment"
        android:label="Post Page"
        >
        <!--        tools:layout="@layout/fragment_post_page"-->
        <argument
            android:name="Name"
            app:argType="string" />
        <argument
            android:name="Description"
            app:argType="string" />
        <argument
            android:name="Price"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <!--    tools:layout="@layout/fragment_add_post"-->
    <fragment
        android:id="@+id/Profile"
        android:name="com.example.SecondHandGame.ProfileFragment"
        android:label="Profile"
        >
        <!--        tools:layout="@layout/fragment_my_profile"-->
        <action
            android:id="@+id/action_Profile_to_fragment_user_post_page"
            app:destination="@id/fragment_user_post_page" />
        <action
            android:id="@+id/action_Profile_to_settingsFragment"
            app:destination="@id/SettingsFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_Profile"
        app:destination="@id/Profile" />
    <fragment
        android:id="@+id/fragment_user_post_page"
        android:name="com.example.SecondHandGame.model.UserPostPageFragment"
        android:label="Post Page "
        >
        <!--        tools:layout="@layout/fragment_user_post_page"-->
        <argument
            android:name="Name"
            app:argType="string" />
        <argument
            android:name="price"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragment_user_post_page_to_editUserPostPageFragment2"
            app:destination="@id/editUserPostPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/editUserPostPageFragment"
        android:name="com.example.SecondHandGame.EditUserPostPageFragment"
        android:label="Edit Post Page"
        >
        <!--        tools:layout="@layout/fragment_edit_user_post_page"-->
        <argument
            android:name="Name"
            app:argType="string" />
        <argument
            android:name="Ingredients"
            app:argType="string" />
        <argument
            android:name="Instructions"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.SecondHandGame.WelcomeFragment"
        android:label="Second Hand Game"
        tools:layout="@layout/fragment_welcome_page">

        <action
            android:id="@+id/action_SettingsFragment_to_postsListFragment"
            app:destination="@id/postsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.example.SecondHandGame.EditUserFragment"
        android:label="Edit Profile"
        >
        <!--        tools:layout="@layout/fragment_edit_user"-->
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.SecondHandGame.SettingsFragment"
        android:label="Settings"
        >
        <!--        tools:layout="@layout/fragment_settings"-->

        <action
            android:id="@+id/action_settingsFragment_to_editUserFragment"
            app:destination="@id/editUserFragment" />
    </fragment>
    <action
        android:id="@+id/settingsFragment2"
        app:destination="@id/SettingsFragment" />

</navigation>