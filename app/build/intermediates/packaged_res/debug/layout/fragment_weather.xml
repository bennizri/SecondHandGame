<?xml version="1.0" encoding="UTF-8"?>

<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image2"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".WeatherFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monotserrat"
        android:text="Weather"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_view_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:ems="15"
        android:fontFamily="@font/monotserrat"
        android:hint="Enter your City name" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/weather_bg_color"
        android:fontFamily="@font/monotserrat"
        android:onClick="getweather"
        android:text="Get Weather" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monotserrat"
        android:hint="Temperatures"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/fragment_weather_tmp_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/weather_cold_background" />

</android.widget.LinearLayout>